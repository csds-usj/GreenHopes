{
    // Enable format on save for supported languages
    "editor.formatOnSave": true,

    // Use prettier for formatting if installed
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // Enable code actions on save for linting (eslint)
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.fixAll.eslint": true
    },

    // Enable TypeScript and JavaScript validation
    "typescript.validate.enable": true,
    "javascript.validate.enable": true,

    // Enable path suggestions for imports
    "typescript.preferences.importModuleSpecifier": "relative",
    "javascript.preferences.importModuleSpecifier": "relative",

    // Enable Tailwind CSS IntelliSense if extension is installed
    "tailwindCSS.experimental.classRegex": [
        "clsx\\(([^)]*)\\)",
        "cva\\(([^)]*)\\)"
    ],

    // Enable React specific settings
    "react.format.enable": true,

    // Set files to be auto-saved after delay
    "files.autoSave": "onFocusChange",

    // Exclude build output from search and file explorer
    "files.exclude": {
        "build": true,
        "node_modules": true
    },

    // ESLint settings
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ]
}